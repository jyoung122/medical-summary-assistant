{
  "name": "medical-summary-assistant",
  "version": "1.0.0",
  "description": "Electron + React assistant for generating structured medical summaries with a local LangGraph-powered backend.",
  "main": "app/main.js",
  "type": "module",
  "scripts": {
    "dev": "electron app/main.js",
    "build": "electron-builder",
    "start": "electron app/main.js"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.6.0",
    "@tanstack/react-query": "^5.45.0",
    "electron": "^28.2.0",
    "prompt-kit": "^0.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shadcn-ui": "^0.8.0",
    "tailwindcss": "^3.4.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "electron-builder": "^24.6.0"
  },
  "build": {
    "appId": "com.codex.medicalsummaryassistant",
    "productName": "Medical Summary Assistant",
    "files": [
      "app/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
